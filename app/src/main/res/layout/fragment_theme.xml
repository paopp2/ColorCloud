<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clLayout"
    android:background="@drawable/roseanna"
    tools:context=".ui.theme.ThemeFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_layout_shape_theme_picker"
        android:fadingEdge="horizontal"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/change_theme_title"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham_medium"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:textSize="26sp"
            tools:layout_editor_absoluteY="56dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rgThemes"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp">

                <RadioButton
                    android:id="@+id/rbRoseanna"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:fontFamily="@font/proxima_nova_soft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:paddingLeft="12dp"
                    android:text="@string/roseanna"
                    android:textSize="21sp" />

                <RadioButton
                    android:id="@+id/rbGlacier"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:fontFamily="@font/proxima_nova_soft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:paddingLeft="12dp"
                    android:text="@string/glacier"
                    android:textSize="21sp" />

                <RadioButton
                    android:id="@+id/rbDusk"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:fontFamily="@font/proxima_nova_soft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:paddingLeft="12dp"
                    android:text="@string/dusk"
                    android:textSize="21sp" />

                <RadioButton
                    android:id="@+id/rbVoid"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:fontFamily="@font/proxima_nova_soft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:paddingLeft="12dp"
                    android:text="@string/void_text"
                    android:textSize="21sp" />

                <RadioButton
                    android:id="@+id/rbBorealis"
                    android:textColor="@color/white"
                    android:buttonTint="@color/white"
                    android:fontFamily="@font/proxima_nova_soft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:paddingLeft="12dp"
                    android:text="@string/borealis"
                    android:textSize="21sp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/roseanna" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/glacier" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/dusk" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/col_void" />

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/borealis" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>